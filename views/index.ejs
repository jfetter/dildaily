<!DOCTYPE html>
 <html lang="en" ng-app="myApp" class="no-js"> 
<head>
  
  <title>Dil Daily</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
 
    <title><% title %></title>
    <link href="bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="templates/bootswatch-slate.css">
    <link href="bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/app.css">
  
</head>
<body>

  <div class ="container well" ng-controller="navCtrl">
      <a ng-sref="home" class="btn col-sm-1">Home</a>

<!--  need to set up login logout hide show to actually mean something -->
      <a ng-hide="loginButton()" ui-sref="home" class="btn col-sm-1">Log in</a>
      <a ng-show="loginButton()" ng-click="logOut()" class="btn col-sm-1">Log Out</a>
<!-- ! -->
<div ng-if="loginButton()">
      <a ui-sref="main" ng-click="goToMyTasks()" class="btn col-sm-1">My Tasks</a>
      <span  ng-if="loggedIn" class="searchBar pull-right col-sm-6">
        <form name="searching">
          <select name="repeatSelect" id="repeatSelect" ng-model="data.repeatSelect" class="dropdown-toggle select-search input-sm col-sm-2">
            <option ng-repeat"category in data.categories" class="search-opt" value="category.name">{{category.name}}
            </option>
            <p>{{data.repeatSelect}}</p>
          </select>
       <input ng-model="searchFor" type="text" class="task-search input-sm col-sm-6">
        <a ng-click="searchAllCat()" href="" class="search-all col-sm-2 btn btn-info">Search</a href="">
        </form>
      </span>
    </div>
 
      <div class="row">
        <div class="col-sm-12">
          <span ng-show="cat"  class="search-results col-sm-6 col-sm-offset-6">
            <div ng-repeat="result in searchArray | filter:searchFor track by $index">
            </div>
              <p class="s-result" ng-click="showDetails(result)" >{{result}}</p>
          </span>
        </div>
      </div>
   
</div>

  
  

  <div ui-view></div>
</div>
 

  <script src="bower_components/angular/angular.js"></script>
  <script src="bower_components/angular-ui-router/release/angular-ui-router.js"></script>
  <script src="bower_components/satellizer/satellizer.min.js">
  </script>
  <script src="bower_components/angular-animate/angular-animate.min.js"></script>
  <script src="bower_components/moment/moment.js"></script>
  <script src="bower_components/angular-moment/angular-moment.js"></script>
  <script src="bower_components/angular-bootstrap/ui-bootstrap.js"></script>
  <script src="bower_components/angular-bootstrap/ui-bootstrap-tpls.js"></script>
  <script src="app.js"></script>
  <script src="controllers/controllers.js"></script>
  <script src="controllers/editCtrl.js"></script>
  <script src="controllers/modalCtrl.js"></script>
  <script src="controllers/authCtrl.js"></script>
  <script src="controllers/navCtrl.js"></script>
  <script src="services.js"></script>
 
</body>
</html>
