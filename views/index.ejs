<!DOCTYPE html>
 <html lang="en" ng-app="myApp" class="no-js"> 
<head>
  
  <title>Get To Work</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="./bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="./templates/bootswatch-slate.css">
  <link href="./bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet">
  <link href="./bower_components/sweetalert/dist/sweetalert.css" rel="stylesheet">
  <link rel="stylesheet" href="./app.css">
  
</head>
<body>

  <div class ="container well" ng-controller="navCtrl">
<!--       <a ng-sref="home" class="btn col-sm-1">Home</a> -->

<!--  need to set up login logout hide show to actually mean something -->
   
      <a ng-show="onRegister" ng-hide="loginButton()" ng-click="onRegister = false" ui-sref="home" class="btn col-sm-1 login-btn">Login</a>
      <a ng-hide="onRegister || loginButton()"  ng-click="onRegister = true" ui-sref="register" class="reg-btn pull-right">Register</a>
      <div class="row">
      <span ng-show="loginButton()"class="col-sm-12 col-md-12 col-lg-6">
        <a ng-click="logOut()" class=" col-sm-3 col-md-2 col-lg-2">Log Out</a>
        <a ui-sref="main" ng-click="goToMyTasks()" class="my-tasks-btn col-sm-3 col-md-3 col-lg-3">{{appTitle}}</a>
        <label for="toolBelt" class="col-sm-2 col-md-2 col-lg-2">Tools:</label>
        <select ng-model="toolBelt" class="col-sm-3 col-md-3 col-lg-3" placeholder="tools">
        <option ng-repeat="tool in selectTools track by $index" value="{{tool}}">{{tool}}</option>
        </select>
      </span>
   
      <span ng-show="loginButton()" class="searchBar pull-right col-sm-12 col-md-12 col-lg-6">
          <label for="cat" class="col-sm-1 col-md-1 col-lg-2">view:</label>
          <select ng-model="cat" class="dropdown-toggle select-search input-sm col-sm-4 col-md-4 col-lg-3" name="cat" id="cat">
            <option class="search-opt" ng-repeat="category in cats track by $index" value="{{category.name}}">{{category.name}}</option>
          </select>
          
       <input ng-model="searchFor" type="text" class="task-search input-sm col-sm-5 col-md-5 col-lg-5" placeholder="search agenda/contacts">
       <!-- <div class="row"> -->
       <!--  <a ng-click="showAll()" href="" class="search-all col-lg-2 col-sm-2 col-md-2 btn btn-info">Show all</a href=""> -->
          <!-- </div> -->
      </span>
   </div>

<!-- ng-show="cat" -->
      <div  class="row results-container" ng-mouseleave="clearSearch()">
       <!--  <div class=""> -->
          <span  class="search-results">
            <div class="search-repeat" ng-repeat="result in searchArray | filter:searchFor track by $index">
              <p class="s-result" ng-click="showDetails(result)" >{{result}}</p>
            </div>
          </span>
        <!-- </div> -->
      </div> 

   </div>


  
  

  <div ui-view></div>
</div>
 
  
  <script src="./bower_components/jquery/dist/jquery.js"></script>
  <script src="./bower_components/angular/angular.js"></script>
  <script src="./bower_components/angular-ui-router/release/angular-ui-router.js"></script>
  <script src="./bower_components/async/dist/async.js"></script>
  <script src="./bower_components/satellizer/satellizer.min.js">
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment-with-locales.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-moment/0.10.3/angular-moment.js"></script>
  <script src="./bower_components/angular-animate/angular-animate.min.js"></script>
  <script src="./bower_components/angular-cookies/angular-cookies.js"></script>
  <script src="./bower_components/angular-jwt/dist/angular-jwt.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-moment/0.10.3/angular-moment.js"></script>
  <script src="./bower_components/angular-bootstrap/ui-bootstrap.js"></script>
  <script src="./bower_components/angular-bootstrap/ui-bootstrap-tpls.js"></script>
  <script src="./bower_components/angular-sweetalert/SweetAlert.min.js"></script>
  <script src="./bower_components/sweetalert/dist/sweetalert.min.js"></script>
  <script src="/bower_components/sweetalert/dist/sweetalert.min.js"></script>
  <script src="./bundle.js"></script>

</body>
</html>
